" Plugins in IDEA
" AceJump , trigger s , manual install
" build-in emmet , trigger ENTER
set ignorecase
set smartcase
set incsearch
set surround
set scrolloff=5

set clipboard=unnamedplus,unnamed

let mapleader=" "
inoremap we <Esc>
vnoremap we <Esc>

nnoremap <leader>w :w<cr>
nnoremap <Leader>q :wq<cr>

nnoremap <silent> zj o<Esc>k
nnoremap <silent> zk O<Esc>j

nnoremap <c-j> 15gj
nnoremap <c-k> 15gk
vnoremap <c-j> 15gj
vnoremap <c-k> 15gk

nnoremap j gj
nnoremap k gk

vnoremap < <gv
nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;
noremap <leader>h <c-w>h
noremap <leader>l <c-w>l
noremap <leader>k <c-w>k
noremap <leader>j <c-w>j

nnoremap Q :action ReformatCode<cr>
vnoremap Q :action ReformatCode<cr>

nnoremap s :action AceAction<cr>

nnoremap <leader>f :action Forward<cr>
nnoremap <leader>b :action Back<cr>
nnoremap <leader>t :action ActivateTerminalToolWindow<cr>

nnoremap <leader>gd :action GotoDeclaration<cr>
nnoremap <leader>gf :action GotoFile<cr>

nnoremap gcc :action CommentByLineComment<cr>
