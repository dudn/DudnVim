" Plugins in IDEA
" AceJump
set ignorecase
set smartcase
set incsearch
set surround

set clipboard=unnamedplus,unnamed

let mapleader=" "
inoremap we <Esc>
vnoremap we <Esc>

nnoremap <leader>w :w!<cr>
nnoremap <Leader>q :qa<cr>

nnoremap <silent> zj o<Esc>k
nnoremap <silent> zk O<Esc>j

vnoremap < <gv
vnoremap > >gv
nnoremap j gj
nnoremap k gk
inoremap <C-h> <Left>
nnoremap <C-h> <Left>
inoremap <C-j> <Down>
nnoremap <C-j> <Down>
inoremap <C-k> <Up>
nnoremap <C-k> <Up>
inoremap <C-l> <Right>
nnoremap <C-l> <Right>
nnoremap <a-j> 15gj
nnoremap <a-k> 15gk
noremap <leader>h <c-w>h
noremap <leader>l <c-w>l
noremap <leader>k <c-w>k
noremap <leader>j <c-w>j

nnoremap s :action AceAction<cr>

nmap <leader>d :action GotoDeclaration<cr>
nmap <leader>f :action Forward<cr>
nmap <leader>b :action Back<cr>

nmap <leader>t :action GotoFile<cr>
