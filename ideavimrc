set ignorecase
set smartcase
set incsearch

let mapleader=" "
inoremap we <Esc>
vnoremap we <Esc>

cnoremap <c-j> <down>
cnoremap <c-k> <up>

nnoremap <leader>w :w!<cr>
nnoremap <Leader>q :qa<cr>

nnoremap <silent> zj o<Esc>k
nnoremap <silent> zk O<Esc>j

nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;
vnoremap < <gv
vnoremap > >gv
nnoremap j gj
nnoremap k gk
nnoremap <a-j> 15gj
nnoremap <a-k> 15gk
noremap <leader>h <c-w>h
noremap <leader>l <c-w>l
noremap <leader>k <c-w>k
noremap <leader>j <c-w>j
